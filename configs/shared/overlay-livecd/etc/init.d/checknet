description="Check if network is active with networkmanager"

depend() {
    after networkmanager
}

start() {
	rc-status | grep inactive | grep networkmanager
	if [ $? -eq 0 ]; then
		rc-status | grep dhcpcd
		if [ ! $? -eq 0 ]; then
			rc-service dhcpcd start
		fi
	fi
}
